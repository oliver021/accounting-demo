@page
@model OliWorkshop.AccountingSys.Pages.ExpenseCaregories.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExpenseCategory[0].Name)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.ExpenseCategory[0].AtCreated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ExpenseCategory)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.AtCreated)
                </td>
                <td>
                    <a asp-page="/Expenses/Index" asp-all-route-data="@ResolveCategory(item.Id)">Show Expenses</a> |
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@functions{

    /// <summary>
    /// Helper emthod to resume code in template
    /// </summary>
    /// <param name="id"></param>
    /// <returns></returns>
    Dictionary<string, string> ResolveCategory(uint id)
    {
        return new Dictionary<string, string>()
        {
            ["category"] = id.ToString()
        };
    }
}