@page
@model OliWorkshop.AccountingSys.Pages.ExpenseCaregories.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4 class="f-title">ExpenseCategory</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExpenseCategory.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExpenseCategory.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExpenseCategory.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExpenseCategory.User.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExpenseCategory.AtCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExpenseCategory.AtCreated)
