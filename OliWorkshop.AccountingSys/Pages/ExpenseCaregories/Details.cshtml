    <dl class="row resume-anotations">
        <dt class="col-sm-2">
            Total:  @Html.DisplayFor(model => model.Resume.Total)
        </dt>
        <dt class="col-sm-2">
            Avarage: @Html.DisplayFor(model => model.Resume.AvarageTotal)
        </dt>
        <dt class="col-sm-2">
            Avarage for Year: @Html.DisplayFor(model => model.Resume.AvaragePerYear)
        </dt>
        <dt class="col-sm-2">
