@page
@model OliWorkshop.AccountingSys.Pages.Templates.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ConceptsTemplates[0].PresetName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConceptsTemplates[0].Concepts)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConceptsTemplates[0].DefaultAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConceptsTemplates[0].Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ConceptsTemplates) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PresetName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Concepts)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
